{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capability for Yorutsuke",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "http:default",
    "http:allow-fetch",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-remove-file",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPLOCALDATA/yorutsuke-v2/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPLOCALDATA/yorutsuke-v2/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPLOCALDATA/yorutsuke-v2/**"
        },
        {
          "path": "/var/folders/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPLOCALDATA/yorutsuke-v2/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/yorutsuke-v2/**"
        }
      ]
    }
  ]
}